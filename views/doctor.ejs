  <style>
    :root{
      --card-bg: #ffffff;
      --accent: #2b8aef;
      --muted: #6b7280;
      --shadow: 0 8px 24px rgba(16,24,40,0.08);
      font-family: Inter, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
    }
    body{
      min-height:100vh;
      margin:0;
      padding:32px;
      display:flex;
      flex-wrap:wrap;
      justify-content:center;
      gap:20px;
      background: linear-gradient(180deg,#f3f6fb 0%, #eef2f7 100%);
    }

    .card{
      width:250px;
      background:var(--card-bg);
      border-radius:16px;
      box-shadow:var(--shadow);
      padding:14px;
      display:grid;
      gap:8px;
      align-items:start;
      transition: transform 0.2s ease;
      height: 257px;
    }
    .card:hover{transform:translateY(-4px)}

    .top{text-align:center}
    .avatar{
      width:80px;
      height:80px;
      border-radius:50%;
      object-fit:cover;
      box-shadow:0 4px 14px rgba(43,138,239,0.12);
    }
    .info h3{margin:6px 0 0;font-size:16px;color:#0f172a}
    .info p{margin:2px 0;font-size:12px;color:var(--muted)}
    .chip{
      display:inline-block;
      background:#f1f5f9;
      padding:2px 6px;
      border-radius:8px;
      font-size:11px;
      margin:4px 2px;
      color:#334155;
    }

    .actions{display:flex;justify-content:space-between;margin-top:6px}
    button{cursor:pointer;border:0;padding:6px 10px;border-radius:8px;font-weight:600;font-size:12px}
    .btn-appoint{background:var(--accent);color:white}
    .btn-details{background:#eef2ff;color:var(--accent)}

    /* Modal */
    .modal-backdrop{
      position:fixed;inset:0;display:none;align-items:center;justify-content:center;background:rgba(10,14,20,0.36);padding:24px;z-index:99
    }
    .modal{
      width:100%;max-width:460px;background:white;border-radius:12px;padding:16px;box-shadow:0 20px 40px rgba(2,6,23,0.2);
    }
    .modal h2{margin:0 0 8px;font-size:18px}
    .modal label{font-size:13px;color:#334155}
    .modal input,.modal select,.modal textarea{width:100%;padding:8px;border-radius:6px;border:1px solid #e6e9ef;font-size:13px}
    .modal textarea{resize:vertical;min-height:60px}
    .modal .actions{justify-content:flex-end;margin-top:10px}
  </style>
</head>
